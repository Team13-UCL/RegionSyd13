<Window x:Class="RegionSyd13._2.View.AddTaskView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegionSyd13._2.View"
        mc:Ignorable="d"
        Title="AddTaskView"
        Height="450"
        Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!-- Row = 0-->
        <Image Source="/ambulancesyd.png"
               Width="125"
               Height="75"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Grid.Row="0"
               Grid.Column="0" />

        <Label Name="RegionIDlbl"
               Grid.Row="0"
               Grid.Column="2"
               VerticalAlignment="Top"
               Content="RegionID + Name" />
        <!-- Row = 1-10 | Column = 0 -->

        <Label Name="Tasklbl"
               Content="Opgave"
               Grid.Row="1"
               Grid.Column="0" />
        <TextBox Name="RegionTaskIDtb"
                 Tag="RegTaskID"
                 Text="{Binding RegTaskID}"
                 Width="auto"
                 Height="20"
                 Grid.Row="2"
                 Grid.Column="0"
                 GotFocus="TextBox_GotFocus"/>
        <TextBox Name="TaskTypetb"
                 Tag="TaskType"
                 Text="{Binding TaskType}"
                 Width="auto"
                 Height="20"
                 Grid.Row="3"
                 Grid.Column="0" />
        <TextBox Name="TaskDescriptiontb"
                 Tag="TaskDescription"
                 Text="{Binding TaskDescription}"
                 Width="auto"
                 Height="20"
                 Grid.Row="4"
                 Grid.Column="0"
                 GotFocus="TextBox_GotFocus" />
        <TextBox Name="ServiceGoalstb"
                 Tag="ServiceGoal"
                 Text="{Binding ServiceGoal}"
                 Width="auto"
                 Height="20"
                 Grid.Row="5"
                 Grid.Column="0"
                 GotFocus="TextBox_GotFocus" />
        <Label Name="Patientlbl"
               Content="Patient Info"
               Grid.Row="6"
               Grid.Column="0" />
        <TextBox Name="FirstNametb"
                 Tag="FirstName"
                 Text="{Binding FirstName}"
                 Width="auto"
                 Height="20"
                 Grid.Row="7"
                 Grid.Column="0"
                 GotFocus="TextBox_GotFocus" />
        <TextBox Name="LastNametb"
                 Tag="LastName"
                 Text="{Binding LastName}"
                 Width="auto"
                 Height="20"
                 Grid.Row="8"
                 Grid.Column="0"
                 GotFocus="TextBox_GotFocus" />
        <TextBox Name="HandLingNotetb"
                 Tag="HandlingNote"
                 Text="{Binding HandlingNote}"
                 Width="auto"
                 Height="20"
                 Grid.Row="9"
                 Grid.Column="0"
                 GotFocus="TextBox_GotFocus" />
        <TextBox Name="Typetb"
                 Tag="PatientType"
                 Text="{Binding PatientType}"
                 Width="auto"
                 Height="20"
                 Grid.Row="10"
                 Grid.Column="0"
                 GotFocus="TextBox_GotFocus" />

        <!-- Row = 1-10 | Column = 2-->
        <Label Content="Start"
               Grid.Row="1"
               Grid.Column="2" />
        <TextBox Name="StartDestinationtb"
                 Tag="StartDestination"
                 Text="{Binding StartDestination}"
                 Width="auto"
                 Height="20"
                 Grid.Row="2"
                 Grid.Column="2"
                 GotFocus="TextBox_GotFocus" />
        <Grid Grid.Row="3"
              Grid.Column="2">



            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBox Name="StartCitytb"
                     Tag="StartCity"
                     Text="{Binding StartCity}"
                     Width="auto"
                     Height="20"
                     GotFocus="TextBox_GotFocus" />
            <TextBox Name="StartPostalCodetb"
                     Tag="StartPostalCode"
                     Text="{Binding StartPostalCode}"
                     Width="auto"
                     Height="20"
                     Grid.Column="2"
                     GotFocus="TextBox_GotFocus" />



        </Grid>
        <TextBox Name="StartStreettb"
                 Tag="StartStreet"
                 Text="{Binding StartStreet}"
                 Width="auto"
                 Height="20"
                 Grid.Row="4"
                 Grid.Column="2"
                 GotFocus="TextBox_GotFocus" />
        <TextBox Name="StartDateAndTimetb"
                 Tag="StartDataAndTime"
                 Text="{Binding StartDateAndTime}"
                 Width="auto"
                 Height="20"
                 Grid.Row="5"
                 Grid.Column="2"
                 GotFocus="TextBox_GotFocus" />


        <Label Content="Slut"
               Grid.Row="6"
               Grid.Column="2" />
        <TextBox Name="EndDestinationtb"
                 Tag="EndDestination"
                 Text="{Binding EndDestination}"
                 Width="auto"
                 Height="20"
                 Grid.Row="7"
                 Grid.Column="2"
                 GotFocus="TextBox_GotFocus" />
        <Grid Grid.Row="8"
              Grid.Column="2">



            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBox Name="EndCitytb"
                     Tag="EndCity"
                     Text="{Binding EndCity}"
                     Width="auto"
                     Height="20"
                     GotFocus="TextBox_GotFocus" />
            <TextBox Name="EndPostalCodetb"
                     Tag="EndPostalCode"
                     Text="{Binding EndPostalCode}"
                     Width="auto"
                     Height="20"
                     Grid.Column="1"
                     GotFocus="TextBox_GotFocus" />
        </Grid>
        <TextBox Name="EndStreettb"
                 Tag="EndStreet"
                 Text="{Binding EndStreet}"
                 Width="auto"
                 Height="20"
                 Grid.Row="9"
                 Grid.Column="2"
                 GotFocus="TextBox_GotFocus" />
        <TextBox Name="EndDateAndTimetb"
                 Tag="EndDateAndTime"
                 Text="{Binding EndDateAndTime}"    
                 Width="auto"
                 Height="20"
                 Grid.Row="10"
                 Grid.Column="2"
                 GotFocus="TextBox_GotFocus" />
        <StackPanel Orientation="Horizontal"
                    Grid.Row="11"
                    Grid.Column="2"
                    HorizontalAlignment="Right">
            <Button Name="Addbtn"
                    Command="{Binding AddCommand}"
                    Content="Opret opgave"
                    Width="75"
                    Height="20"
                    Margin="10,0"
                    Click="Addbtn_Click" />
            <Button Name="Savebtn"
                    Command="{Binding UpdateCommand}"
                    Content="Gem"
                    Width="75"
                    Height="20"
                    Margin="10,0"
                    Click="Savebtn_Click" />
            <Button Name="Cancelbtn"
                    Content="Cancel"
                    Width="75"
                    Height="20"
                    Margin="10,0"
                    IsCancel="True"
                    Click="Cancelbtn_Click" />


        </StackPanel>
    </Grid>
</Window>